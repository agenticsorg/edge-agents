# SPARC2 MCP Server Configuration

# Required API Keys (replace with your actual keys)
OPENAI_API_KEY=your-openai-api-key
E2B_API_KEY=your-e2b-api-key
MCP_SECRET_KEY=your-mcp-secret-key

# Optional Configuration
SPARC2_MODEL=gpt-4o
SPARC2_MODE=automatic
SPARC2_DIFF_MODE=file
SPARC2_PROCESSING=sequential

# Vector Store Configuration
VECTOR_STORE_ENABLED=true
VECTOR_STORE_PATH=./data/vector-store

# Logging Configuration
LOG_LEVEL=debug