{
  "mcpServers": {
    "hello-world-server": {
      "command": "node",
      "args": [
        "/workspaces/edge-agents/scripts/agents/mcp-hello/build/index.js"
      ],
      "disabled": false,
      "autoApprove": [
        "greet"
      ]
    },
    "vscode-mcp": {
      "command": "node",
      "args": [
        "/workspaces/edge-agents/scripts/vscode-remote-mcp/multi-step-init.js"
      ],
      "disabled": false,
      "timeout": 60,
      "transportType": "stdio",
      "autoApprove": [
        "greet",
        "list_files",
        "read_file"
      ]
    },
    "sparc2-mcp": {
      "command": "node",
      "args": [
        "/workspaces/edge-agents/scripts/sparc2/src/mcp/mcpServerWrapper.js"
      ],
      "workingDirectory": "/workspaces/edge-agents/scripts/sparc2",
      "disabled": true,
      "autoApprove": [
        "analyze_code",
        "modify_code",
        "execute_code",
        "search_code",
        "create_checkpoint",
        "rollback",
        "config"
      ],
      "env": {
        "OPENAI_API_KEY": "your_openai_api_key_here",
        "OPENROUTER_MODEL": "openai/o3-mini-high",
        "OPENROUTER_API_KEY": "your_openrouter_api_key_here",
        "E2B_API_KEY": "your_e2b_api_key_here",
        "MCP_SECRET_KEY": "3e268f644151bd579be94cb872115b6c",
        "SPARC2_CONFIG_PATH": "/workspaces/edge-agents/scripts/sparc2/config.toml",
        "SPARC2_AGENT_CONFIG_PATH": "/workspaces/edge-agents/scripts/sparc2/agent-config.toml",
        "ENABLE_TRACING": "true",
        "TRACING_LEVEL": "debug",
        "OPENAI_MODEL": "gpt-4o",
        "NULL_VALUE": "false"
      },
      "alwaysAllow": [
        "analyze_code"
      ]
    }
  }
}