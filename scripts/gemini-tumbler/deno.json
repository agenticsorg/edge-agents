{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/index.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write src/index.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "dotenv": "https://deno.land/std@0.204.0/dotenv/mod.ts",
    "uuid": "https://deno.land/std@0.204.0/uuid/mod.ts",
    "std/": "https://deno.land/std@0.204.0/",
    "@google/generative-ai": "npm:@google/generative-ai@0.2.1"
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["src/testdata/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}