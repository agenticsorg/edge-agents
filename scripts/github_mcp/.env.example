# GitHub MCP Server Environment Configuration
# This file contains all environment variables used by the GitHub MCP server
# Copy this file to .env and modify the values as needed
# SECURITY NOTE: Never commit your .env file to version control

#######################
# REQUIRED VARIABLES  #
#######################

# GitHub Authentication
# Required: Your GitHub Personal Access Token with appropriate permissions
# Format: A valid GitHub token string
# Security: Keep this token secure and never share it
# Permissions needed: repo, read:user, read:org (for organization repositories)
# How to obtain: https://github.com/settings/tokens
GITHUB_TOKEN=

#######################
# SERVER CONFIGURATION #
#######################

# Server Port Configuration
# Port to run the MCP server on
# Default: 3000
# Format: Integer between 1024-65535
# Note: Ports below 1024 typically require root/admin privileges
MCP_PORT=3000

# Server Host Configuration
# Host address to bind the server to
# Default: 0.0.0.0 (all interfaces)
# Format: IP address or hostname
# Security: Use 127.0.0.1 for local-only access
MCP_HOST=0.0.0.0

# API Base Path
# Base path for all API endpoints
# Default: /api
# Format: URL path starting with /
API_BASE_PATH=/api

#######################
# SECURITY SETTINGS   #
#######################

# Token Validation
# Enable validation of client tokens for API requests
# Default: true
# Format: true/false
# Security: Should be enabled in production environments
VALIDATE_TOKENS=true

# API Authentication Token
# Token used to authenticate API requests
# Format: Random string (min 32 characters recommended)
# Security: Generate a strong random token for production
# Example: openssl rand -hex 32
API_TOKEN=

# CORS Configuration
# Allowed origins for CORS requests
# Default: * (all origins)
# Format: Comma-separated list of domains or * for all
# Security: Restrict to specific domains in production
CORS_ALLOWED_ORIGINS=*

# TLS/SSL Configuration
# Enable HTTPS for secure connections
# Default: false
# Format: true/false
# Security: Should be enabled in production environments
ENABLE_TLS=false

# TLS Certificate Path
# Path to TLS certificate file
# Required if ENABLE_TLS=true
# Format: File path
TLS_CERT_PATH=

# TLS Key Path
# Path to TLS private key file
# Required if ENABLE_TLS=true
# Format: File path
TLS_KEY_PATH=

#######################
# LOGGING SETTINGS    #
#######################

# Log Level
# Controls verbosity of server logs
# Values: debug, info, warn, error
# Default: info
# Note: Use debug only for troubleshooting
LOG_LEVEL=info

# Log Format
# Format of log output
# Values: text, json
# Default: text
# Note: json is recommended for production for easier parsing
LOG_FORMAT=text

# Log File
# Path to log file (if empty, logs to stdout)
# Default: empty (stdout)
# Format: File path
LOG_FILE=

#######################
# RATE LIMITING       #
#######################

# GitHub API Rate Limit
# Maximum number of GitHub API requests per hour
# Default: 5000 (GitHub's standard rate limit)
# Note: This should match your GitHub account's rate limit
# For GitHub Enterprise, this may be different
GITHUB_RATE_LIMIT=5000

# API Rate Limiting
# Maximum number of API requests per minute per client
# Default: 60
# Format: Integer
# Security: Adjust based on expected legitimate usage
API_RATE_LIMIT=60

#######################
# TIMEOUT SETTINGS    #
#######################

# Request Timeout
# Maximum time in milliseconds for API requests to complete
# Default: 30000 (30 seconds)
# Format: Integer (milliseconds)
REQUEST_TIMEOUT=30000

# GitHub API Timeout
# Maximum time in milliseconds for GitHub API requests
# Default: 10000 (10 seconds)
# Format: Integer (milliseconds)
GITHUB_API_TIMEOUT=10000

#######################
# CACHE SETTINGS      #
#######################

# Enable Cache
# Enable caching of GitHub API responses
# Default: true
# Format: true/false
ENABLE_CACHE=true

# Cache TTL
# Time-to-live for cached items in seconds
# Default: 300 (5 minutes)
# Format: Integer (seconds)
CACHE_TTL=300

#######################
# ADVANCED SETTINGS   #
#######################

# Debug Mode
# Enable additional debug information
# Default: false
# Format: true/false
# Security: Disable in production environments
DEBUG_MODE=false

# Max Request Size
# Maximum size of request body in megabytes
# Default: 5
# Format: Integer (megabytes)
MAX_REQUEST_SIZE=5

# Worker Threads
# Number of worker threads for processing requests
# Default: 0 (automatic based on CPU cores)
# Format: Integer
WORKER_THREADS=0