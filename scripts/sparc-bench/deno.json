{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false
    }
  },
  "test": {
    "files": {
      "include": ["src/tests/"]
    }
  },
  "tasks": {
    "test": "deno test --allow-read --allow-env --allow-net src/tests/",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "run": "deno run --allow-read --allow-write --allow-env --allow-net sparc-bench.ts",
    "test-sparc2": "deno run --allow-read --allow-write --allow-env --allow-net test-sparc2.ts"
  }
}