# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_PROD}
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_VERSION=2023-05-15

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY_PROD}
AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT_PROD}
AZURE_OPENAI_API_VERSION=2023-05-15

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_PROD}
ANTHROPIC_API_URL=https://api.anthropic.com

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PROD}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_PROD}
STRIPE_PRICE_ID=${STRIPE_PRICE_ID_PROD}

# Rate Limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_TOKEN_BUCKET_SIZE=100

# Performance Settings
PROVIDER_TIMEOUT=30000
STREAM_CHUNK_SIZE=1024
MAX_TOKENS_PER_REQUEST=4096

# Security
ALLOWED_ORIGINS=["https://app.example.com"]
AUTH_REQUIRED=true
ENABLE_REQUEST_LOGGING=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AZURE_PROVIDER=true
ENABLE_ANTHROPIC_PROVIDER=true
ENABLE_STREAMING=true
ENABLE_RATE_LIMITING=true

# Environment
NODE_ENV=production
DEBUG=false