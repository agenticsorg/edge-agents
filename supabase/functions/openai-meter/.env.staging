# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_STAGING}
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_VERSION=2023-05-15

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY_STAGING}
AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT_STAGING}
AZURE_OPENAI_API_VERSION=2023-05-15

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_STAGING}
ANTHROPIC_API_URL=https://api.anthropic.com

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_STAGING}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_STAGING}
STRIPE_PRICE_ID=${STRIPE_PRICE_ID_STAGING}

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_TOKEN_BUCKET_SIZE=50

# Performance Settings
PROVIDER_TIMEOUT=30000
STREAM_CHUNK_SIZE=1024
MAX_TOKENS_PER_REQUEST=4096

# Security
ALLOWED_ORIGINS=["https://staging.example.com", "http://localhost:3000"]
AUTH_REQUIRED=true
ENABLE_REQUEST_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AZURE_PROVIDER=false
ENABLE_ANTHROPIC_PROVIDER=false
ENABLE_STREAMING=true
ENABLE_RATE_LIMITING=true

# Environment
NODE_ENV=staging
DEBUG=true