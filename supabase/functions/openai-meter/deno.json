{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read index.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read index.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "deploy": "supabase functions deploy openai-meter --no-verify-jwt"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false
  }
}