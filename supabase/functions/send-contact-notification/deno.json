{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.js", "**/*.mjs", "**/*.cjs"]
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.js", "**/*.mjs", "**/*.cjs"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
